	#statsDetails .statsTable {
		background-color:hsl(228, 24%, 96%);/* === #f2f3f7 */
		/*border: 1px solid #ececec;*/
		border-bottom:none;
		height:300px;
		overflow:scroll;		
	}
	
	#statsDetails .statsTable.empty {
		opacity:0.6;
	}		
	
	#statsDetails .statsTable.full {
		opacity:1;
	}
	
	#statsDetails .statsTable .column {
		float:left;
	}
	
	#statsDetails .statsTable .column.first {
		/*width:150px;*/
		width:30%; /*15%;*/
	}
	
	#statsDetails .statsTable .column.second, 
	#statsDetails .statsTable .column.third  {
		/*width:200px;*/
		width:35%;/*17.5%;*/
	}
	
	#statsDetails .statsTable .column .tBody ul {
		margin:0;
		padding:0;
		list-style-type: none;
	}
	
	#statsDetails .statsTable .tHead {
		/*color: #626b73;*//*hsl(270, 2%, 25%);*/ /* hsl(210, 14%, 69%);*/
		font-size: 1.1em;
		padding:10px 15px;
		border-right:1px solid #ececec;
		border-bottom:1px solid hsl(0, 0%, 87%);
	}
	
	#statsDetails .statsTable .tHead .tHeadTitle {
		/*font-weight:bold;*/
	}
	
	#statsDetails .statsTable .tBody .group,
	#statsDetails .statsTable .tBody .language,
	#statsDetails .statsTable .tBody .nationality {
		border-bottom: 1px solid hsl(0, 0%, 87%);
		background-color:hsl(228, 24%, 96%);
		/*color:#626b73;*//*#686869*/
	}
	
	#statsDetails .statsTable .tBody .language,
	#statsDetails .statsTable .tBody .nationality,
	#statsDetails .statsTable .tBody .group li>div {
		border-right: 1px solid hsl(0, 0%, 87%);			
		padding:10px;
		padding-left:15px;
	}
	
	#statsDetails .statsTable .tBody .group .selected {
		background-color:white;
		border-right:none;
	}
	
	
