	#statsDetails .statsTable .tBody .group:hover {
		cursor:pointer;
		background-color:white;
		/*  transitions should be set to setup class (above) 
			but this gives a nicer effect
		*/
		-webkit-transition: all linear 0.3s;
		transition: all linear 0.3s;
	}
	
	#statsDetails .statsTable .tBody .nationality {
		border-right:none;
	}
			
	#statsDetails .statsTable .tBody .language,
	#statsDetails .statsTable .tBody .nationality {
		background-color:white;
	}
	
	#statsDetails .statsTable .tBody .name,
	#statsDetails .statsTable .tBody .value {
		/*font-size: 1.1em;*/
		color: hsl(210, 14%, 69%);
	}
	
	#statsDetails .statsTable .tBody .name {
		/*font-weight:bold;*/
		color:hsl(84, 35%, 55%);
	}
	
	#statsDetails .statsTable .tBody .value {
		color: hsl(210, 14%, 69%);
	}
	
	#statsDetails .statsTable .entitySymbol {
		float:right;
		font-size:0.8em;
		line-height: 1.7em;
	}
	
	#statsDetails .statsTable .sortSymbol {
		padding-left:5px;
		font-size:0.5em;
		font-weight:normal;
		color: hsl(210, 14%, 69%);
	}

	#statsDetails .statsTable.full .pad,
	#statsDetails .statsTable.empty .pad {
		border-bottom:1px solid hsl(0, 0%, 87%);
		height:10px;
	}
	
	#statsDetails .statsTable.empty .pad {
		background-color:hsl(210, 14%, 69%);
	}
	
	#statsDetails .statsTable.full .pad {
		background-color:#BCE27F;
	}
	
	#statsDetails .statsTable.full .pad.extra {
		background-color:hsl(0, 0%, 87%);
		display:none;
	}